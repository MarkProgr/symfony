{% extends 'base.html.twig' %}

{% block title %}Founded products{% endblock %}

{% block body %}
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Manufacturer</th>
        <th>Price</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr class="product">
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.manufacturer }}</td>
            <td>{{ product.price }}</td>
            <td>
                <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    <a href="{{ path('app_product_index') }}">Main page</a>
{% endblock %}
